@model RoomBooking.Models.Room
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Rooms</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="max-height: 400px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="fas fa-door-open fa-5x"></i>
                    </div>
                }
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <p class="text-muted">Room Number: @Model.RoomNumber</p>
                    
                    <div class="mb-3">
                        <span class="badge bg-info me-2">@Model.RoomType</span>
                        <span class="badge bg-secondary me-2">Floor @Model.FloorNumber</span>
                        <span class="badge @(Model.Status == RoomBooking.Models.RoomStatus.Available ? "bg-success" : "bg-warning")">
                            @Model.Status
                        </span>
                    </div>
                    
                    <p class="card-text">@Model.Description</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h5>Room Details</h5>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-users text-primary"></i> Capacity: @Model.Capacity people</li>
                                @if (Model.AreaSqm.HasValue)
                                {
                                    <li><i class="fas fa-ruler-combined text-primary"></i> Area: @Model.AreaSqm sqm</li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>Pricing</h5>
                            <ul class="list-unstyled">
                                <li><strong>Daily Rate:</strong> $@Model.DailyRate</li>
                                <li><strong>Monthly Rate:</strong> $@Model.MonthlyRate</li>
                            </ul>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Amenities))
                    {
                        <div class="mt-4">
                            <h5>Amenities</h5>
                            <p><i class="fas fa-check-circle text-success"></i> @Model.Amenities</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h5 class="card-title">Book this Room</h5>
                    
                    @if (Model.Status == RoomBooking.Models.RoomStatus.Available)
                    {
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@Model.Id" class="btn btn-primary w-100 mb-2">
                                <i class="fas fa-calendar-check"></i> Book Now
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Create", "Bookings", new { roomId = Model.Id })" class="btn btn-primary w-100 mb-2">
                                <i class="fas fa-sign-in-alt"></i> Login to Book
                            </a>
                        }
                        
                        <div class="alert alert-success small mb-0">
                            <i class="fas fa-check"></i> Available for booking
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-exclamation-triangle"></i> Currently unavailable
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
