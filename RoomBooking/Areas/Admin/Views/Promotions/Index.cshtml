@model IEnumerable<RoomBooking.Models.Promotion>
@{
    ViewData["Title"] = "Manage Promotions";
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Promotion
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Promo Code</th>
                            <th>Discount</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var promo in Model)
                        {
                            <tr>
                                <td>@promo.Title</td>
                                <td>@promo.PromoCode</td>
                                <td>
                                    @if (promo.DiscountPercentage > 0)
                                    {
                                        <span>@promo.DiscountPercentage%</span>
                                    }
                                    else if (promo.DiscountAmount > 0)
                                    {
                                        <span>$@promo.DiscountAmount</span>
                                    }
                                </td>
                                <td>@promo.StartDate.ToString("MMM dd, yyyy")</td>
                                <td>@promo.EndDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (promo.IsActive)
                                    {
                                        <i class="fas fa-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-danger"></i>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@promo.Id" class="btn btn-outline-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@promo.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@promo.Id" class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No promotions available. Add a new promotion to get started.</p>
        }
    </div>
</div>
