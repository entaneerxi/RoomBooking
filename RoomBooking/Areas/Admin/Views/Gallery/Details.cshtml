@model RoomBooking.Models.Gallery
@{
    ViewData["Title"] = $"Gallery Details - {Model.Title}";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header">
                <h4>@Model.Title</h4>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid mb-3">
                }
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Category:</strong> @Model.Category</p>
                <p><strong>Display Order:</strong> @Model.DisplayOrder</p>
                <p><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header"><h5>Actions</h5></div>
            <div class="card-body d-grid gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Back</a>
            </div>
        </div>
    </div>
</div>
