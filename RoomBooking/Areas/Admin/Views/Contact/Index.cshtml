@model RoomBooking.Models.ContactInfo
@{
    ViewData["Title"] = "Contact Information Management";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h4>Contact Information</h4>
            </div>
            <div class="card-body">
                @if (Model != null)
                {
                    <dl class="row">
                        <dt class="col-sm-4">Property Name</dt>
                        <dd class="col-sm-8">@Model.PropertyName</dd>
                        
                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                        
                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                        
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        
                        <dt class="col-sm-4">Website</dt>
                        <dd class="col-sm-8">@Model.Website</dd>
                        
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        }
                    </dl>
                    
                    <a asp-action="EditContactInfo" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Contact Info
                    </a>
                }
                else
                {
                    <p class="text-muted">No contact information found.</p>
                    <a asp-action="EditContactInfo" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Contact Info
                    </a>
                }
            </div>
        </div>
        
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4>Social Media Links</h4>
                <a asp-action="CreateSocialMedia" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus"></i> Add Social Media
                </a>
            </div>
            <div class="card-body">
                @if (ViewBag.SocialMedia != null && ((IList<RoomBooking.Models.SocialMedia>)ViewBag.SocialMedia).Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Platform</th>
                                <th>URL</th>
                                <th>Icon</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var social in (IList<RoomBooking.Models.SocialMedia>)ViewBag.SocialMedia)
                            {
                                <tr>
                                    <td>@social.Platform</td>
                                    <td>@social.Url</td>
                                    <td><i class="@social.IconClass"></i></td>
                                    <td>@(social.IsActive ? "Yes" : "No")</td>
                                    <td>
                                        <a asp-action="EditSocialMedia" asp-route-id="@social.Id" class="btn btn-sm btn-primary">Edit</a>
                                        <form asp-action="DeleteSocialMedia" asp-route-id="@social.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this social media link?')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No social media links added yet.</p>
                }
            </div>
        </div>
    </div>
</div>
