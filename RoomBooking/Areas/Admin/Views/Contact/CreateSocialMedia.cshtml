@model RoomBooking.Models.SocialMedia
@{
    ViewData["Title"] = "Add Social Media Link";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-header">
                <h4>Add Social Media Link</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateSocialMedia" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="Platform" class="form-label"></label>
                        <input asp-for="Platform" class="form-control" required placeholder="e.g., Facebook, Twitter, Instagram" />
                        <span asp-validation-for="Platform" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Url" class="form-label"></label>
                        <input asp-for="Url" type="url" class="form-control" required placeholder="https://..." />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="IconClass" class="form-label"></label>
                            <input asp-for="IconClass" class="form-control" placeholder="e.g., fab fa-facebook" />
                            <span asp-validation-for="IconClass" class="text-danger"></span>
                            <small class="text-muted">Use FontAwesome icon classes</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DisplayOrder" class="form-label"></label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" value="0" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Add Social Media
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
