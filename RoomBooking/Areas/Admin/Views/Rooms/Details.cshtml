@model RoomBooking.Models.Room
@{
    ViewData["Title"] = $"Room Details - {Model.RoomNumber}";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4>Room Information</h4>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success fs-6">Active</span>
                }
                else
                {
                    <span class="badge bg-danger fs-6">Inactive</span>
                }
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;">
                    </div>
                }
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Room Number:</strong> @Model.RoomNumber<br>
                        <strong>Name:</strong> @Model.Name<br>
                        <strong>Room Type:</strong> @Model.RoomType<br>
                        <strong>Capacity:</strong> @Model.Capacity person(s)
                    </div>
                    <div class="col-md-6">
                        <strong>Daily Rate:</strong> $@Model.DailyRate<br>
                        <strong>Monthly Rate:</strong> $@Model.MonthlyRate<br>
                        <strong>Floor Number:</strong> @Model.FloorNumber<br>
                        <strong>Area:</strong> @Model.AreaSqm sqm
                    </div>
                </div>
                
                <hr>
                
                <div class="mb-3">
                    <strong>Status:</strong>
                    <span class="badge @(Model.Status == RoomBooking.Models.RoomStatus.Available ? "bg-success" : 
                                         Model.Status == RoomBooking.Models.RoomStatus.Occupied ? "bg-danger" : "bg-warning")">
                        @Model.Status
                    </span>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <strong>Description:</strong><br>
                        <p>@Model.Description</p>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.Amenities))
                {
                    <div class="mb-3">
                        <strong>Amenities:</strong><br>
                        <p>@Model.Amenities</p>
                    </div>
                }
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")
                        </small>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Last Updated:</strong> @(Model.UpdatedAt?.ToString("MMM dd, yyyy hh:mm tt") ?? "Never")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header">
                <h5>Actions</h5>
            </div>
            <div class="card-body d-grid gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Room
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete Room
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
