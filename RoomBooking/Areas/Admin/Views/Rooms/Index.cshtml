@model IEnumerable<RoomBooking.Models.Room>
@{
    ViewData["Title"] = "Manage Rooms";
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Room
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Room Number</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Capacity</th>
                            <th>Daily Rate</th>
                            <th>Monthly Rate</th>
                            <th>Status</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td>@room.RoomNumber</td>
                                <td>@room.Name</td>
                                <td>@room.RoomType</td>
                                <td>@room.Capacity</td>
                                <td>$@room.DailyRate</td>
                                <td>$@room.MonthlyRate</td>
                                <td>
                                    <span class="badge @(room.Status == RoomBooking.Models.RoomStatus.Available ? "bg-success" : 
                                                         room.Status == RoomBooking.Models.RoomStatus.Occupied ? "bg-danger" : "bg-warning")">
                                        @room.Status
                                    </span>
                                </td>
                                <td>
                                    @if (room.IsActive)
                                    {
                                        <i class="fas fa-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-danger"></i>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-outline-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No rooms available. Add a new room to get started.</p>
        }
    </div>
</div>
