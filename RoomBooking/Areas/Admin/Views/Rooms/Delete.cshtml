@model RoomBooking.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> Delete Room</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Warning!</strong> Are you sure you want to delete this room?
                    This action will soft-delete the room (set IsActive to false).
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Room Number:</strong> @Model.RoomNumber<br>
                        <strong>Name:</strong> @Model.Name<br>
                        <strong>Room Type:</strong> @Model.RoomType
                    </div>
                    <div class="col-md-6">
                        <strong>Daily Rate:</strong> $@Model.DailyRate<br>
                        <strong>Monthly Rate:</strong> $@Model.MonthlyRate<br>
                        <strong>Status:</strong> @Model.Status
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <strong>Description:</strong><br>
                        <p>@Model.Description</p>
                    </div>
                }
                
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
