@model RoomBooking.Models.Room
@{
    ViewData["Title"] = $"Edit Room - {Model.RoomNumber}";
}

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card shadow">
            <div class="card-header">
                <h4>Edit Room - @Model.RoomNumber</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RoomNumber" class="form-label"></label>
                            <input asp-for="RoomNumber" class="form-control" required />
                            <span asp-validation-for="RoomNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RoomType" class="form-label"></label>
                            <input asp-for="RoomType" class="form-control" required />
                            <span asp-validation-for="RoomType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Capacity" class="form-label"></label>
                            <input asp-for="Capacity" type="number" class="form-control" required />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DailyRate" class="form-label"></label>
                            <input asp-for="DailyRate" type="number" step="0.01" class="form-control" required />
                            <span asp-validation-for="DailyRate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MonthlyRate" class="form-label"></label>
                            <input asp-for="MonthlyRate" type="number" step="0.01" class="form-control" required />
                            <span asp-validation-for="MonthlyRate" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FloorNumber" class="form-label"></label>
                            <input asp-for="FloorNumber" type="number" class="form-control" required />
                            <span asp-validation-for="FloorNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="AreaSqm" class="form-label"></label>
                            <input asp-for="AreaSqm" type="number" step="0.01" class="form-control" required />
                            <span asp-validation-for="AreaSqm" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="@RoomBooking.Models.RoomStatus.Available">Available</option>
                                <option value="@RoomBooking.Models.RoomStatus.Occupied">Occupied</option>
                                <option value="@RoomBooking.Models.RoomStatus.Maintenance">Maintenance</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Amenities" class="form-label"></label>
                        <textarea asp-for="Amenities" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Amenities" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
