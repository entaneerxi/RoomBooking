@model IEnumerable<RoomBooking.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="mb-3">
    <div class="btn-group" role="group">
        <a asp-action="Index" class="btn @(string.IsNullOrEmpty(ViewBag.SelectedRole) ? "btn-primary" : "btn-outline-primary")">All Users</a>
        @foreach (var role in ViewBag.Roles)
        {
            <a asp-action="Index" asp-route-role="@role" class="btn @(ViewBag.SelectedRole == role ? "btn-primary" : "btn-outline-primary")">@role</a>
        }
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Date of Birth</th>
                            <th>Status</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.PhoneNumber</td>
                                <td>@(user.DateOfBirth?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>@(user.LastLoginAt?.ToString("MMM dd, yyyy") ?? "Never")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No users found.</p>
        }
    </div>
</div>
