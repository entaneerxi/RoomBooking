@model RoomBooking.Models.Facility
@{
    ViewData["Title"] = "Delete Facility";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> Delete Facility</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Warning!</strong> Are you sure you want to delete this facility?
                </div>
                
                <div class="mb-3">
                    <strong>Name:</strong> @Model.Name<br>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <strong>Description:</strong> @Model.Description<br>
                    }
                    @if (!string.IsNullOrEmpty(Model.IconClass))
                    {
                        <strong>Icon:</strong> <i class="@Model.IconClass"></i> @Model.IconClass<br>
                    }
                    <strong>Display Order:</strong> @Model.DisplayOrder
                </div>
                
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
