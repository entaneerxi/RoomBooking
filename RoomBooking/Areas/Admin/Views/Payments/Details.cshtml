@model RoomBooking.Models.Payment
@{
    ViewData["Title"] = $"Payment Details - #{Model.Id}";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h4>Payment Information</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Payment ID:</strong> #@Model.Id<br>
                        <strong>Booking ID:</strong> <a asp-controller="Bookings" asp-action="Details" asp-route-id="@Model.BookingId">#@Model.BookingId</a><br>
                        <strong>User:</strong> @Model.User?.Email<br>
                        <strong>Room:</strong> @Model.Booking?.Room?.Name
                    </div>
                    <div class="col-md-6">
                        <strong>Amount:</strong> $@Model.Amount<br>
                        <strong>Payment Method:</strong> @Model.PaymentMethod?.Name<br>
                        <strong>Status:</strong>
                        <span class="badge @(Model.Status == RoomBooking.Models.PaymentStatus.Paid ? "bg-success" : 
                                             Model.Status == RoomBooking.Models.PaymentStatus.Pending ? "bg-warning" : "bg-danger")">
                            @Model.Status
                        </span>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.TransactionReference))
                {
                    <div class="mb-3">
                        <strong>Transaction Reference:</strong> @Model.TransactionReference
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.PaymentProofUrl))
                {
                    <div class="mb-3">
                        <strong>Payment Proof:</strong><br>
                        <img src="@Model.PaymentProofUrl" alt="Payment Proof" class="img-fluid rounded" style="max-width: 400px;">
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="mb-3">
                        <strong>Notes:</strong><br>
                        <p>@Model.Notes</p>
                    </div>
                }
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")<br>
                            @if (Model.PaidAt.HasValue)
                            {
                                <strong>Paid At:</strong> @Model.PaidAt.Value.ToString("MMM dd, yyyy hh:mm tt")<br>
                            }
                        </small>
                    </div>
                    <div class="col-md-6">
                        @if (Model.ConfirmedAt.HasValue)
                        {
                            <small class="text-muted">
                                <strong>Confirmed At:</strong> @Model.ConfirmedAt.Value.ToString("MMM dd, yyyy hh:mm tt")
                            </small>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header">
                <h5>Actions</h5>
            </div>
            <div class="card-body d-grid gap-2">
                @if (Model.Status == RoomBooking.Models.PaymentStatus.Pending)
                {
                    <form asp-action="ConfirmPayment" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Confirm this payment?')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-check"></i> Confirm Payment
                        </button>
                    </form>
                    
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                        <i class="fas fa-times"></i> Reject Payment
                    </button>
                }
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model.Status == RoomBooking.Models.PaymentStatus.Pending)
{
    <div class="modal fade" id="rejectModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="RejectPayment" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Reject Payment</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="notes" class="form-label">Rejection Reason</label>
                            <textarea name="notes" id="notes" class="form-control" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject Payment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
